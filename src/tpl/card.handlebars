<h1 class="name_contry">{{name}}</h1>
<div class="description">
    <div>
        <p class="description_paragraph"> <span class="description_paragraph-header">Capital:</span> {{capital}}</p>
        <p class="description_paragraph"> <span class="description_paragraph-header">Population:</span> {{population}}</p>
        <p class="description_paragraph description_paragraph-header">Languages:</p> 
         <ul class="languages-list">
                {{#each languages}}
                    <li class="languages-list_item">{{this.name}}</li>
                {{/each}}
        </ul>
    </div>    
        
    
    <img src="{{flag}}" alt="flag {{name}}" class="flag_img">
</div>
